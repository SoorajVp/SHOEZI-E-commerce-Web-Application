					{{/if}}
					<div class="text-center">
						 <h6 class="user-name pt-2 ">{{user.Username}}</h6>
				   		 {{!-- <h7 class="user-email">{{user.email}}</h7> --}}
					</div>
				</div>
				
			</div>

			<hr>

			<div class="about">
				<h6 class="text-secondary">ACCOUNT SETTINGS</h6>				
			</div>
			

			<a href="/profile" style="text-decoration: none;">
            <div class="border mt-2 ">
                <h4 class="pt-2">Personal Informations</h4>
            </div>
            </a>

            <a href="/address" style="text-decoration: none;">
            <div class="border mt-2 bg-light">
                <h4 class="pt-2 ">Manage Address</h4>
            </div>
            </a>

			<hr>

			<div class="about">
				<h6 class="text-secondary">MY STUFFS</h6>				
			</div>

			 <a href="/my-orders" style="text-decoration: none;">
            <div class="border mt-2">
                <h4 class="pt-2">My Orders</h4>
            </div>
            </a>
            
            <a href="/wishList" style="text-decoration: none;">
            <div class="border mt-2">
                <h4 class="pt-2">Wishlist</h4>
            </div>
            </a>

            <a href="/cart-products" style="text-decoration: none;">
            <div class="border mt-1 text-info">
                <h4 class=" pt-2 ">Cart items</h4>
            </div>
            </a>     

		</div>
	</div>
    <a href="/change-password" style="text-decoration: none; margin-top: 30px;">
        <p class="text-primary text-center mb-2"> Change Password</p>
    </a>

    <a href="/logout" style="text-decoration: none;">
        <div class="border bottom-align-text text-center ">
            <h3 class="pt-2 text-secondary ">Logout</h3>
        </div>
     </a>


</div>
</div>
<div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
<div class="card h-100">
	<div class="card-body container">
        <a href="/add-address" style="text-decoration: none;">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-2 border bg-primary">
				<h3 class="m-3 text-white text-center">+  ADD NEW ADDRESS</h3>
		</div>
        </a>		

        {{#each user.address}}
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-2 border" style="background-color: rgba(245, 242, 245, 0.487);">
			<div class="p-3">
                <p> <b> {{this.name}} </b>  <b class="pl-4 font-weight-normal">{{this.mobile}}  </b> <a type="button"  onclick="addressRemove('{{this._id}}')" class="text-danger border p-1 float-right"> DELETE</a></p>
                <p>{{this.address}} , {{this.city}} , {{this.district}} , {{this.pincode}}  <a type="button"  class="text-primary border pl-3 pr-2 p-1 float-right"> EDIT</a></p>

            </div>
		</div>
        {{/each}}
        		
	</div>
	
</div>
</div>
</div>
</div>

<script>
    function addressRemove(addressId){
        
        Swal.fire({
          title: 'Are you sure?',
          text: "You won't be able to revert this!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
          if (result.isConfirmed) {
            Swal.fire(
              'Deleted!',
              'This address has been deleted.',
              'success'
            )
            axios({
                url: `/remove-address/${addressId}`,
                method: 'get',
            })
            .then((response) =>{
                console.log(response);
                location.reload()
            })

            
          }
        })

        
        
        
    }






</script>