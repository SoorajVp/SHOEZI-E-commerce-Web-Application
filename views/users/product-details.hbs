
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>


<div class="template-collection belle">
<div id="pre-loader">
    <img src="//assets/images/loader.gif" alt="Loading..." />
</div>

<div class="pageWrapper">
	<!--Search Form Drawer-->

        <div id="page-content">













                <div id="MainContent" class="main-content" role="main">
                <!--Breadcrumb-->
                <div class="bredcrumbWrap">
                    <div class="container breadcrumbs">
                        <a href="index.html" title="Back to the home page">Home</a><span aria-hidden="true">â€º</span><span>Product With Right Thumbs</span>
                   	</div>
                </div>
                <!--End Breadcrumb-->
                
                <div id="ProductSection-product-template" class="product-template__container prstyle1 container product-right-sidebar">
                    <!--product-single-->
                    <div class="product-single">
                        <div class="row">
                            <div class="col-lg-10 col-md-9 col-sm-12 col-12">
                                <div class="product-details-img">

                                    <div class="zoompro-wrap product-zoom-right pl-20">
                                        <div class="zoompro-span">
                                            <img class="zoompro blur-up lazyload" data-zoom-image="{{product.image.[0]}}" alt="" src="{{product.image.[0]}}" />
                                        </div>
                                    </div>

                                    <div class="lightboximages">
                                        {{#each product.image}}
                                        <a href="{{this}}" data-size="1462x2048"></a>
                                        {{/each}}
                                    </div>
        							 <div class="product-thumb">
                                        <div id="gallery" class="product-dec-slider-2 product-tab-left">
                                            {{#each product.image}}
                                            <a data-image="{{this}}" data-zoom-image="{{this}}" class="slick-slide slick-cloned" data-slick-index="-4" aria-hidden="true" tabindex="-1">
                                                <img class="blur-up lazyload" src="{{this}}" alt="" />
                                            </a>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>

                                <div class="product-information">

                                <div class="product-single__meta text-center">
                                    <h1 class="product-single__title">{{product.name}}</h1>
                                    <div class="product-nav clearfix">					
                                        <a href="#" class="next" title="Next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
                                    </div>
                                    {{#if (isEqual product.quantity 0)}}
                                        <div class="product-stock"> <span class="instock text-danger mt-3 h3">OUT STOCK</span></div>
                                    {{else}}
                                        <div class="product-stock"> <span class="instock text-success  h3">IN STOCK</span></div>
                                    {{/if}}
                                    <div class="product-single__description py-2">
                                      <p>Category : <b> {{product.category}}</b></p>
                                    </div>
                                    {{#if product.offer}}

                                    <p class="product-single__price product-single__price-product-template pt-2">
                                        <span class="visually-hidden">Regular price</span>
                                        <s id="ComparePrice-product-template"><span class="money">{{product.price}}</span></s>
                                        <span class="product-price__price product-price__price-product-template product-price__sale product-price__sale--single">
                                        <span id="ProductPrice-product-template"><span class="money  font-weight-normal">{{product.total}}</span></span>
                                        </span>
                                        <span class="discount-badge"> <span class="devider">|</span>&nbsp;
                                        <span class="off text-primary">(<span>-{{product.offer}}</span>%)</span>
                                        </span>  
                                    </p>
                                    {{else}}
                                    <p class="product-single__price product-single__price-product-template">
                                        <span class="product-price__price product-price__price-product-template product-price__sale product-price__sale--single">
                                            <span id="ProductPrice-product-template"><span class="money">{{product.price}}</span></span>
                                        </span>
                                    </p>
                                    {{/if}}
                                
                                    <div class="tabs-listing">
                                    <div class="tab-container">
                                    	<h3 class="acor-ttl active" rel="tab1">Product Details</h3>
                                        <div id="tab1" class="tab-content">
                                            <div class="product-description rte">
                                                <p>{{product.description}}</p>
                                            </div>
                                        </div>                                     
                                    </div>
                                    </div>

                                 <div accept-charset="UTF-8" class="product-form product-form-product-template hidedropdown mt-3"  >
                                    
                                   <div class="swatch clearfix swatch-1 option2" data-option-index="1">
                                        <div class="product-form__item">
                                          <label class="header">Size (Inches): <span class="slVariant"></span></label>
                                          <div data-value="XS" class="swatch-element xs available">
                                            <input class="swatchInput" id="swatch-1-xs" type="radio" name="option-1" value="XS" checked>
                                            <label class="swatchLbl medium rectangle" for="swatch-1-xs" title="XS">5</label>
                                          </div>
                                          <div data-value="S" class="swatch-element s available">
                                            <input class="swatchInput" id="swatch-1-s" type="radio" name="option-1" value="S">
                                            <label class="swatchLbl medium rectangle" for="swatch-1-s" title="S">6</label>
                                          </div>
                                          <div data-value="M" class="swatch-element m available">
                                            <input class="swatchInput" id="swatch-1-m" type="radio" name="option-1" value="M">
                                            <label class="swatchLbl medium rectangle" for="swatch-1-m" title="M">7</label>
                                          </div>
                                          <div data-value="L" class="swatch-element l available">
                                            <input class="swatchInput" id="swatch-1-l" type="radio" name="option-1" value="L">
                                            <label class="swatchLbl medium rectangle" for="swatch-1-l" title="L">8</label>
                                          </div>
                                          <div data-value="XL" class="swatch-element xl available">
                                            <input class="swatchInput" id="swatch-1-xl" type="radio" name="option-1" value="XL">
                                            <label class="swatchLbl medium rectangle" for="swatch-1-xl" title="XL">9</label>
                                          </div>
                                        </div>
                                    </div>
                                    
                                </div>

                                    <div class="product-action clearfix pt-3">
                                    {{#if user}}
                                       {{#if (isEqual product.quantity 0)}}
                                       <div class="product-form__item--submit pb-2 d-flex" >
                                         <a  onclick="WishList('{{product._id}}','{{user._id}}')"  class="pr-2"  style="font-size: 28px; text-decoration: none;">
                                              <i class="icon anm anm-heart-l"></i>
                                            </a>
                                            <span  id="cart-count" class="btn" aria-disabled="false" style=" border-radius: 20px; padding-top: 9px;">
                                                <span>Add to cart</span>
                                            </span>
                                        </div>
                                       {{else}}
                                        <div class="product-form__item--submit pb-2 d-flex">
                                             <a  onclick="WishList('{{product._id}}','{{user._id}}')"  class="pr-2"  style="font-size: 28px; text-decoration: none;">
                                              <i class="icon anm anm-heart-l"></i>
                                            </a>
                                            <span onclick="addToCart('{{product._id}}')"  id="cart-count" class="btn" style=" border-radius: 20px; padding-top: 9px;">
                                                <span>Add to cart</span>
                                            </span>
                                        </div>
                                        {{/if}}
                                    {{else}}
                                        <div class="product-form__item--submit pb-2 d-flex"  >
                                             <a    class="pr-2"  style="font-size: 28px; text-decoration: none;">
                                              <i class="icon anm anm-heart-l"></i>
                                            </a>
                                            <a href="/login"  id="cart-count" class="btn" aria-disabled="false" style=" border-radius: 20px; padding-top: 9px;">
                                                <span>Add to cart</span>
                                            </a>
                                        </div>
                                    {{/if}}
                                    </div>
                              
                                </div>
                        	</div>

                            </div>
                            
                    	</div>
                    </div>
                    </div>
            </div>
            
            
            <!--MainContent-->
            <div id="MainContent" class="main-content" role="main">
                <!--Breadcrumb-->
                <hr>
                <!--End Breadcrumb-->
                
                <div id="ProductSection-product-template" class="product-template__container prstyle2 container">
                    <!--#ProductSection-product-template-->
                    
                    <!--End-product-single-->
                    
                    <!--Related Product Slider-->
                    <div class="related-product grid-products">
                        <header class="section-header pt-4">
                            <h2 class="section-header__title text-center h2"><span>Related Products</span></h2>
                            <p class="sub-heading">You can stop autoplay, increase/decrease aniamtion speed and number of grid to show and products from store admin.</p>
                        </header>
                        <div class="productPageSlider">
                         {{#each related}}
                          <div class="col-12 item">
                                <!-- start product image -->
                                <div class="border">
                                    <div class="product-image border">
                                        <!-- start product image -->
                                            <a href="/product-details/{{this.url}}">
                                            <!-- image --> 
                                            <img class="lazyload" src="{{this.image.[0]}}"  alt="image" title="product" />
                                            <!-- End image -->
                                            </a>
                                            <!-- product label -->
                                            {{#if this.offer}}
                                            <div class="product-labels"><span class="lbl pr-label3">- {{this.offer}}% </span></div>
                                            {{/if}}
                                        <!-- Start product button -->
                                        <span class="variants add" >
                                            <button class="btn" onclick="addToCart('{{this._id}}')" >Add to cart</button>
                                        </span>
                                        {{#if ../user}}
                                        <div class="button-set" >
                                            <div class="wishlist-btn" >
                                                <a class="wishlist add-to-wishlist"  onclick="WishList('{{this._id}}','{{../user._id}}')" title="Add to Wishlist">
                                                    <i class="icon anm anm-heart-l"></i>
                                                </a>
                                            </div>
                                        </div>
                                        {{/if}}
                                        <!-- end product button -->
                                    </div>
                                    <!-- end product image -->
                                    
                                    <!--start product details -->
                                    <div class="product-details text-center ">
                                        <!-- product name -->
                                        <div class="product-name">
                                            <a >{{this.name}}</a>
                                        </div>
                                        <!-- End product name -->
                                        <!-- product price -->
                                        {{#if this.offer}}
                                        <div class="product-price pb-2">
                                            <span class="old-price">{{this.price}}</span>
                                            <span class="price">{{this.total}}</span>
                                        </div>
                                        {{else}}
                                       

                                         <div class="product-price pb-2">
                                            <span class="price"> {{this.price}}</span>
                                        </div>
                                        {{/if}}
                                        <!-- End product price -->
                                        
                                    </div>
                                  
                                    </div>
                                </div>
                                {{/each}}
                            
                        </div>
                    </div>
                    
                	<!--#ProductSection-product-template-->
            	</div>
            <!--MainContent-->
        </div>
    </div>
</div>

