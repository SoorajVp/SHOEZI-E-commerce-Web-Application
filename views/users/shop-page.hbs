                                  <label for="check5"><span><span></span></span>PUMA</label>
                                </li>
                                
                            </ul>
                        </div>
                        <!--End Brand-->
                       
                        <!--Banner-->
                        <div class="sidebar_widget static-banner">
                        	<img src="https://i.pinimg.com/originals/63/0b/e3/630be321776c125343dc33fd78011789.jpg" alt="" />
                        </div>
                        
                        <!--end Product Tags-->
                    </div>
                </div>
                <!--End Sidebar-->
                <!--Main Content-->
                <div class="col-12 col-sm-12 col-md-9 col-lg-9 main-col">
                	<div class="category-description">
                    	<h3>Category Description</h3>
