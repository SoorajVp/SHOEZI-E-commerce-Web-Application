<div class="template-collection belle">
  <div id="pre-loader">
    <img src="/assets/images/loader.gif" alt="Loading..." />
  </div>

  <div class="pageWrapper">
    <!--Search Form Drawer-->

    <div class="jumbotron text-center" style="background-color: #fff">

      {{#if wishlist}}
        <div class="justify-content-center">
          <img
            src="https://cdn3.iconfinder.com/data/icons/livico-shop-e-commerce/128/shopify_pastel-08-512.png"
            alt=""
            style="width: 200px;"
          />
        </div>
        <h3
          class="text-primary font-weight-bold"
          style=" font-size: 22px;"
        >Wishlist is Empty!</h3>
      {{else if cart}}
        <div class="justify-content-center">
          <img src="/assets/images/preview.png" alt="" style="width: 200px;" />
        </div>
        <h3 class="text-primary font-weight-bold" style=" font-size: 22px;">Cart
          is Empty!</h3>
      {{else}}
        <h3
          class="text-primary font-weight-bold"
          style=" font-size: 22px;"
        >Orders is Empty!</h3>
      {{/if}}
      <p class="" style="font-size: larger;"><strong>Add something to make me
          happy :)</strong><br />
        we'll be in touch shortly!</p>
      <hr />

      <p class="lead">
        <a class="btn btn-sm" href="/" role="button">shop now</a>
      </p>
    </div>
  </div>
</div>