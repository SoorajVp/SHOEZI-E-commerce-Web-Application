


<section class="vh-100" style="background-color: #fffdfd;">
  <div class="container py-4 h-100">
    <div class="row d-flex justify-content-center align-items-center h-90">
      <div class="col col-xl-10">
        <div class="card shadow border" style="border-radius: 1rem; margin-top: 20px;  height: 500px;">
          <div class="row g-0">
            
            <div class="col-md-6 col-lg-5 d-none d-md-block pt-3">
              <img src="/assets/images/Secure login-amico.png"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;  margin-top: 32px; margin-left: 26px;" />
            </div>

            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                

                <form action="/login" method="post" class="style2" id="loginForm">

                  <div class="d-flex align-items-center mb-2 pb-1">
                    <h1 class=" mb-0 mx-auto font-weight-bold">Login</h1>
                  </div>

                  <div class="form-group">
                    	<label for="address_zip">Email ID</label>
                  	<input type="email" id="emailId"  name="email" placeholder="Email">
                  </div>

                  <div class="form-group">
                    	<label for="address_zip">Password</label>
                  	<input type="password" id="password"  name="password1" placeholder="Password">
                  </div>

                  {{!-- <div class="form-outline mb-4">
                    <input type="email" id="form2Example17" class="form-control " name="email" placeholder="Email"/>
                  </div> --}}
                  
                  {{!-- <div class="form-outline mb-2">
                    <input type="password" id="form2Example27" class="form-control " name="password1" placeholder="Password" />
                  </div> --}}

                  <div class="divider " >                              
                        <p class="mx-auto" ><a href="#" class="text-primary">Forgotten password ? </a></p><br>
                        
                    </div>
                  {{#if logErr}}
                    <span style="text-align: center;"><p class="text-danger">{{logErr}}</p></span>
                  {{/if}}

                  <div class="pt-1 ">
                    {{!-- <button type="button" class="btn btn-outline-primary  btn-block">Login</button> --}}
                    <button class="btn   btn-block" style="width: 100%;">Login</button>
                  </div>
              
                   <div class="pt-1 mb-3">
                    <p class=" fw-bold mx-3 mb-0 text-muted " style="text-align: center;">OR</p> 
                    <a href="/otp-login" class="btn " style="width: 100%;" id="specialButton" > Login with OTP</a>
                  
                  <!-- Button trigger modal -->
                  
                  
                  <div>                                                           
                      <p  style="text-align: center; padding-top: 6px;">Don't have an account? <br>
                      <a href="/signup" class="text-primary">Create New Account</a></p><br>                       
                  </div>


                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<script>
	jQuery('#loginForm').validate({
    rules:{
        emailId:{
            require: true,
            email: true
        }
    },
    messages:{
        emailId:{
            email:"Please Enter A Valid Email"
        }
    }
})
</script>