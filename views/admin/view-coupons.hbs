
<!-- [ Main Content ] start -->
<div class="pcoded-main-container">
  <div class="pcoded-wrapper">
    <div class="pcoded-content">
      <div class="pcoded-inner-content">
        <div class="main-body">
          <div class="page-wrapper">

            <!-- [ breadcrumb ] start -->

            <div class="card">
              <div class="card-body">
                <h4 class="mb-4 ">COUPONS MANAGEMENT</h4>
                <a  class="btn btn-success float-right mb-3 text-white " data-toggle="modal" data-target="#Coupon">ADD COUPONS</a>
                <div class="text-center">
                  <div class="table-responsive">
                    <table class="table table-striped" style="width: 100%; ">
                      <thead>
                        
                        <tr>
                          {{!-- <th scope="col">ID</th> --}}
                          <th scope="col">CODE</th>
                          <th scope="col">discount ( % )</th>
                          <th scope="col">created</th>
                          <th scope="col">Expired</th>
                          <th scope="col">status</th>
                          <th scope="col">Handle</th>
                        </tr>
                      </thead>
                      <tbody>
                          {{#each coupons}}
                          <tr>
                            {{!-- <th scope="row">{{this._id}}</th> --}}
                            <td>{{this.code}}</td>
                            <td>{{this.discount}} %</td>
                            <td>{{this.created}}</td>
                            <td>{{this.expired}}</td>
                            <td>{{this.status}}</td>
                            <td><a href="" class="btn btn-info btn-sm" data-toggle="modal" data-target="#editCoupon{{this._id}}">EDIT</a></td>
                          </tr>
                          {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>

              </div>
            </div>

            <!-- [ Main Content ] end -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- [ Main Content ] end -->



{{#each coupons}}
<div class="modal fade" id="editCoupon{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" style="border-radius: 10px;">
      <div class="modal-header">
        <h5 class="modal-title " id="exampleModalLongTitle" style="padding-left: 175px;">EDIT COUPON</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <form action="/admin/edit-coupon/{{this._id}}" method="post">
      <div class="modal-body">
        <div class="form-group col-md-12 ">
          <label for="exampleFormControlSelect1">Edit Coupon</label>
            <input type="text" class="form-control" value="{{this.code}}" name="code" />
          </div> 
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
           <div class="form-group">
             <label for="" >DISCOUNT</label>
             <input type="text" class="form-control" value="{{this.discount}}" name="discount" />
           </div>
         </div>
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
           <div class="form-group">
             <label for="" >EXPIRED ON</label>
             <input type="date" class="form-control" value="{{this.expired}}" name="expired" />
           </div>
         </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>  
        
        <button type="submit" class="btn btn-primary">SUBMIT</button>
      </div>
      </form>
    </div>
  </div>
</div>
{{/each}}






