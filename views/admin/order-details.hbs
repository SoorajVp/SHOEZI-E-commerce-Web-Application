<div class="pcoded-main-container">
  <div class="pcoded-wrapper">
    <div class="pcoded-content">
      <div class="pcoded-inner-content">
        <div class="main-body">
          <div class="page-wrapper">

            <!-- [ breadcrumb ] start -->
            
            <div class="card">
              <div class="card-body">
                <h4 class="text-center">Order Details</h4>
                <div class="row container">

                    {{#each products}}
                    <div class="col-md-12 col-lg-12 col-xl-12 border mb-2" style="background-color: rgb(240, 243, 247);">
                        <div class="d-flex pt-2 pl-4">
                        <img src="{{this.product.image.[0]}}" width="130px" height="160px" alt="">

                            <div class="pl-4 py-1">
                                <h5 class="text-secondary">{{this.product.name}}</h5>
                                <h7>CATEGORY ID: </h7><h7 class="pl-2">{{this.product.category}}</h7><br>
                                {{!-- <h7>Description : {{this.product.description}}</h7><br> --}}
                                {{!-- <h7>Quantity :</h7> <h7 class="pl-2">{{this.quantity}} </h7><br> --}}
                                <h7 >PRICE :</h7><h7 class="pl-2">{{this.product.price}}</h7><br>
                                <h7>QUANTITY :</h7><h7 class="pl-2">{{this.quantity}}</h7><br>
                                <div class="pt-3"><h6 class="float-left text-secondary">SUBTOTAL : </h6><h6 class="pl-2 d-flex text-secondary"> {{this.product.price}} x {{this.quantity}} </h6></div>

                            </div>
                        </div>
                    </div>
                    {{/each}}

                    {{#if orderDetails}}
                    <div class="col-md-6 col-lg-6 col-xl-6 border" style="background-color: rgb(240, 243, 247);">
                        <div class="pl-4 pt-4">
                            <p>ORDER ID :{{orderDetails._id}}</p>
                            <p>USER ID :{{orderDetails.userId}}</p>
                            {{!-- <p>USER NAME :</p> --}}
                            <p>PAYMENT-METHOD :{{orderDetails.paymentMethod}} </p>
                            <p>ORDER STATUS :{{orderDetails.status}} </p>
                            <p>CREATED ON :{{orderDetails.createdOn}} </p>
                            <p>TOTAL PRICE :{{orderDetails.price}} </p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-6 border" style="background-color: rgb(240, 243, 247);">
                        <div class="pl-4 pt-3">
                            <h4 class="text-secondary pb-1">Delivery Details</h4>
                            <p>NAME :{{orderDetails.deliveryDetails.name}} </p>
                            <p>MOBILE :{{orderDetails.deliveryDetails.mobile}} </p>
                            <p>ADDRESS :{{orderDetails.deliveryDetails.address}} </p>
                            <p>CITY :{{orderDetails.deliveryDetails.city}} </p>
                            <p>DISTRICT :{{orderDetails.deliveryDetails.district}} </p>
                            <p>PINCODE :{{orderDetails.deliveryDetails.pincode}} </p>
                        </div>
                    </div>
                    {{/if}}

                </div>

              </div>
            </div>
            

            <!-- [ Main Content ] end -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- [ Main Content ] end -->